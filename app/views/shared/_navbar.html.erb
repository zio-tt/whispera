<div class="navbar bg-base-100 rounded-full w-screen px-10 mt-3 mb-3">
  <div class="navbar-start">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        <li><%= link_to("New Episode", new_episode_path) %></li>
        <li><%= link_to("Episodes", episodes_path) %></li>
        <li><a>Likes Rank</a></li>
        <li><a>aboout</a></li>
      </ul>
    </div>
  </div>
  <div class="navbar-center">
    <%= link_to "Tsuduri", episodes_path, class: "btn btn-ghost normal-case text-xl" %>
  </div>
  <div class="navbar-end">
    <% if current_page?(controller: 'episodes', action: 'index') %>
      <div class="join">
        <div>
          <div>
            <input id="search-title" class="input input-bordered join-item" placeholder="Title"/>
          </div>
        </div>
        <select id="search-theme" class="select select-bordered join-item">
          <option disabled selected>Theme</option>
          <%= @themes.each do |theme| %>
            <option><%= theme %></option>
          <% end %>
        </select>
        <div class="indicator">
          <button id="search-button" class="btn join-item">Search</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
